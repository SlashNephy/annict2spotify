    }
  },
  "rules": {
    // åŸºæœ¬ã‚¤ãƒ³ãƒ‡ãƒ³ãƒˆã‚’ 2 ã«ã™ã‚‹
    "indent": ["error", 2, { "SwitchCase": 1 }],
    // æ”¹è¡Œã‚³ãƒ¼ãƒ‰ã‚’ LF ã«ã™ã‚‹
    "linebreak-style": ["error", "unix"],
    // ãƒ€ãƒ–ãƒ«ã‚¯ã‚©ãƒ¼ãƒ†ãƒ¼ã‚·ãƒ§ãƒ³ã‚’ç¦æ­¢
    "quotes": ["error", "single"],
    // ã‚»ãƒŸã‚³ãƒ­ãƒ³ã‚’ç¦æ­¢
    "semi": ["error", "never"],
    // import é †ã‚’ä¸¦ã³æ›¿ãˆã‚‹
    "import/order": [
      "warn",
      {
        // çµ„ã¿è¾¼ã¿ â† å¤–éƒ¨ä¾å­˜ â† å†…éƒ¨ä¾å­˜ â† import type ã®é †ã«ã™ã‚‹
        "groups": ["builtin", "external", ["parent", "sibling", "index"], "object", "type", "unknown"],
        // ã‚«ãƒ†ã‚´ãƒªãƒ¼é–“ã«æ”¹è¡Œã‚’å…¥ã‚Œã‚‹
        "newlines-between": "always",
        // å¤§æ–‡å­—å°æ–‡å­—åŒºåˆ¥ãªã—ã§ ABC é †ã«ã™ã‚‹
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroups": [
          // **.css ã¯æœ€å¾Œã«é…ç½®ã™ã‚‹
          {
            "pattern": "**.css",
            "group": "type",
            "position": "after"
          }
        ],
        // **.css ãŒ import é †æœ€å¾Œã§ã¯ãªã„ã¨ãã«è­¦å‘Š
        "warnOnUnassignedImports": true
      }
    ],
    // ä¸è¦ import æ–‡ã‚’ç¦æ­¢
    "unused-imports/no-unused-imports": "error",
    // import type ã‚’å„ªå…ˆ
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports"
      }
    ],
    // ä¸è¦ãªå¤‰æ•°ã‚’ç¦æ­¢
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-vars": [
      "warn",
      // "_" ã§å§‹ã¾ã‚‹å¤‰æ•°ã‚’è¨±å¯
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    // default export ã‚’ç¦æ­¢
    "import/no-default-export": "error",
    // ã‚¢ãƒ­ãƒ¼é–¢æ•°ã‚’å„ªå…ˆ
    "prefer-arrow-callback": "error",
    // const a = function () { ... } ã‚’ç¦æ­¢
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    // ä¸­æ‹¬å¼§ã®çœç•¥ã‚’ç¦æ­¢
    "curly": "error",
    // <div flag={true} /> ğŸ‘‰ <div flag />
    "react/jsx-boolean-value": "error",
    // <div value={"test"} /> ğŸ‘‰ <div value="test" />
    "react/jsx-curly-brace-presence": "error",
    // <div></div> ğŸ‘‰ <div />
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    // ã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆåã‚’ PascalCase ã«å¼·åˆ¶
    "react/jsx-pascal-case": "error",
    // ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆæ–‡å­—åˆ—ã‚’å„ªå…ˆ
    "prefer-template": "error",
    // == æ¯”è¼ƒ ğŸ‘‰ === æ¯”è¼ƒ
    "eqeqeq": "error",
    // *.js ã§ 'use strick'; ã‚’å¼·åˆ¶
    "strict": ["error", "global"],
    // Array<T> ğŸ‘‰ T[]
    "@typescript-eslint/array-type": "error",
